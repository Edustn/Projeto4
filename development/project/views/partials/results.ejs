<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/main.css" rel="stylesheet" type="text/css">
    <title>Pangeia | Tudo em um só lugar</title>
</head>
<body>
    <div class="container">
        <header>
            <form action="/search" method="get" id="search-bar" onsubmit="">
            </form>
        </header>
        <main class="results-container">
            <hgroup>
                <h2>Resultados para: <strong id="search-query">Pesquisa Realizada</strong></h2>
                <p>Exibindo <span id="qtdMaxRows"></span> de <%= qtdRows %> resultados</p>
            </hgroup>
            <article class="results">
                <% results.forEach((result) => { %>
                <section class="result">                    
                    <a href='/table?id=<%= result.ID %>''>
                        <hgroup>
                            <span><%= result.DATABASE %></span>
                            <div class="result-container-title">
                                <h3><%= result.TABELA %></h3>
                                <% if (String(result.DADOS_SENSIVEIS).trim().toLowerCase() == 's') { %>
                                <!--Renders an image if it have a sensible content <img src="" alt="Dados sensíveis"></img>-->
                                <img src="/img/sensitive-content.svg" alt="Imagem que informa que essa tabela contém dados sensíveis" />
                                <% } %>
                            </div>
                        </hgroup>
                    </a>
                    <p><%= result.CONTEUDO_TABELA %></p>
                </section>
                <% }); %>
            </article>
            <form action="/search" method="get" id="change-exhibition" class="exhibition">
                <input type="text" hidden id="q" name="q">
                <input type="text" hidden id="index-exhibition" name="index">

                <fieldset>
                    <label for="maxRows">EXIBIR</label>
                    <select name="maxRows" id="maxRows">
                        <option selected value="20">20</option>
                        <option value="40">40</option>
                        <option value="60">60</option>
                        <option value="80">80</option>
                    </select>
                    <label for="maxRows">RESULTADOS POR PÁGINA</label>
                </fieldset>

                <fieldset id="change-index">
                    <button type="button" class="button-change-index" name="index" aria-label="Ir para página anterior" value="p" id="previous-result">&lt;</button>

                    <button type="button" class="button-change-index" name="index" aria-label="Ir para a página 1" value="1">1</button>
                    <button type="button" class="button-change-index" name="index" aria-label="Ir para a página 2" value="2">2</button>
                    <button type="button" class="button-change-index" name="index" aria-label="Ir para a página 3" value="3">3</button>
                    <button type="button" class="button-change-index" name="index" aria-label="Ir para a página 4" value="4">4</button>
                    <button type="button" class="button-change-index" name="index" aria-label="Ir para a página 5" value="5">5</button>

                    <button type="button" class="button-change-index" name="index" aria-label="Ir para a próxima página" value="n" id="next-result">&gt;</button>
                </fieldset>
            </form>
        </main>
        <footer>
            <address>
                <h3>Desenvolvedores:</h3>
                <p>
                    &nbsp;
                    <a href="https://www.linkedin.com/">Ana Marques</a>, 
                    <a href="https://www.linkedin.com/">Caio Paula</a>,
                    <a href="https://www.linkedin.com/">Eduardo H. dos Santos</a>,
                    <a href="https://www.linkedin.com/">Lucas Rego</a>,
                    <a href="https://www.linkedin.com/">Luiza Rubim</a>,
                    <a href="https://www.linkedin.com/">Yan M. Coutinho</a>.
                </p>
            </address>
        </footer>
    </div>
    <script type="module" src="/js/main.js"></script>
</body>
</html>